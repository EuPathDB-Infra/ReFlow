<workflowGraph name="sub">

  <param name="dance"/>
  <param name="testComputeCluster"/>
  <param name="seqFile"/>

  <step name="tellTheWorld"
        stepClass="ReFlow::TestFlow::HelloWorld">
    <paramValue name="msg">I dance a $$dance$$ to announce running repeatMasker</paramValue>
  </step>

  <!--  test compute cluster by calling the repeatMasker program on the cluster -->
  <subgraph name="testComputeCluster" 
	    xmlFile="testComputeCluster.xml"
	    includeIf="$$testComputeCluster$$"
	    externalName="testCC">
    <paramValue name="seqFile">$$seqFile$$</paramValue>
    <depends name="tellTheWorld"/>
  </subgraph>


</workflowGraph>
