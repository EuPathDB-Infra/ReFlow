<workflowGraph name="root">
  <param name="person"/>
  <param name="testComputeCluster"/>
  <param name="seqFile"/>

  <constant name="mood">happy</constant>

  <step name="sayHello"
        stepClass="ReFlow::TestFlow::HelloWorld" 
	skipIfFile="/home/sfischer/junk/soso">
    <paramValue name="msg">The sky is blue</paramValue>
  </step>

  <subgraph name="doSomeStuff" 
	    xmlFile="exampleGraph.xml"
	    skipIfFile="/home/sfischer/junk/soso">
    <paramValue name="dance">$$mood$$ waltz</paramValue>
    <paramValue name="testComputeCluster">$$testComputeCluster$$</paramValue>
    <paramValue name="seqFile">$$seqFile$$</paramValue>
  </subgraph>

  <step name="speakToPluto"
        stepClass="ReFlow::TestFlow::HelloUnderworld">
    <paramValue name="greeting">Hello down there $$person$$</paramValue>
    <depends name="doSomeStuff"/>
    <depends name="sayHello"/>
  </step>

  <subgraph name="doMoreStuff"
	    xmlFile="anotherExampleGraph.xml">
    <paramValue name="testComputeCluster">$$testComputeCluster$$</paramValue>
  </subgraph>

</workflowGraph>
